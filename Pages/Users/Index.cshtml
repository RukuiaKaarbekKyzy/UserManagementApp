@page
@model UserManagementApp.Pages.Users.IndexModel
@inject UserManagementApp.Services.UserService UserService


<h1>Users page</h1>

<a class="btn btn-primary" asp-page="./Create">Add User</a>

<table>
    <thead>
        <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
    </thead>
    </tr>
    <tbody>
        @foreach(var user in UserService.GetUsers())
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.Id">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@user.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>